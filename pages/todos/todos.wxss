.container1 {
    display: flex;
    flex-direction: column;
    width: 100%;
}
.line {
    height: 1px;
    flex: 1;
    background-color: #e7e7e7;
}
.header {
    flex: 1;
    height: 50px;
    margin: 10px;
    border-radius: 5px;
    border: 1px solid #e7e7e7;
    display: flex;
    align-items: center;
}

.todo {
    margin-left: 10px;
    margin-right: 10px;
    border-radius: 5px;
    border: 1px solid #e7e7e7;
    display: flex;
    flex-direction: column;

}

.item {
    height: 40px;
    flex: 1;
    display: flex;
    border-bottom: 1px solid #e7e7e7;
    align-items: center;
}
.item:last-child{
    border-bottom: 0px;
}

.itemName {
    flex: 1;
    color: gray;
    margin-left: 10px;

}
.itemCompleted {
    text-decoration: line-through;
}

.footer {
    display: flex;
    justify-content: space-around;
    margin-top: 20px;
}

.footerContent {
    color: gold;
}

.plus {
    width: 34px;
    height: 34px;
    margin-left: 10px;
    margin-right: 10px;
}
.empty {
    display: flex;
    flex-direction: column;
}

.title {
    text-align: center;
    margin-top: 50px;
    margin-bottom: 50px;
    font-size: 30px;
    color: #e7e7e7;
}
.content {
    text-align: center;
    color: #e7e7e7;
}
